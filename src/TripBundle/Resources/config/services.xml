<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true"/>
        <prototype namespace="TripBundle\" resource="../../*"
                   exclude="../../{Entity,Migrations,Tests,Resources}">
        </prototype>

        <service id="TripBundle\DataPersister\AccountDataPersister">
            <bind key="$decoratedDataPersister" type="service" id="api_platform.doctrine.orm.data_persister"/>
        </service>

        <service id="TripBundle\OpenApi\OpenApiFactory" decorates="api_platform.openapi.factory">
        </service>

        <service id="TripBundle\Doctrine\TripSetCreatedByListener">
            <tag>doctrine.orm.entity_listener</tag>
        </service>

    </services>
</container>